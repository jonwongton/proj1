<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<%= button_to "Create a New Pokemon!", new_pokemon_path, :class => "button medium", :method => :get %>

 <% @trainer.pokemons.each do |pokemon| %>
      <h4><%= pokemon.name %>, Level <%= pokemon.level %>, Health <%= pokemon.health %>, <%= button_to "Damage!", damage_path(id: pokemon), :class => "button medium", :method => :patch %></h4>
 <% end %>
